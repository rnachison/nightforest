<!DOCTYPE html>
<html>
<head>
    <title>Nightforestapp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script src="//cdnjs.cloudflare.com/ajax/libs/d3/3.5.2/d3.js" charset="utf-8"></script>
    <link href='https://fonts.googleapis.com/css?family=Bilbo+Swash+Caps' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Marck+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Niconne' rel='stylesheet' type='text/css'>
    <%= csrf_meta_tags %>
</head>
<body>

        <div id="container">
			<div id="user_header">
        		<% if current_user %>
                    <div class="right_links">
                	   <%= link_to(current_user) do %>
                            <button type='button' class='user_links'><%= current_user.username %>'s page</button>
                	   <% end %>
                    </div>
                    <div class="right_links">
                        <%= link_to "<button type='button' class='user_links'>log out</button>".html_safe, logout_path %>
                    </div>
			    <% else %>
                    <div class="right_links">
                        <%= link_to "<button type='button' class='user_links'>sign up</button>".html_safe, signup_path %>
                    </div>
                    <div class="right_links"> 
                        <%= link_to "<button type='button' class='user_links'>log in</button>".html_safe, login_path %>
                    </div>
			    <% end %>
			</div>

        <div id="path_header">
            <div class="left_links">
                <%= link_to "<button type='button' class='path_links'>forest</button>".html_safe, root_path %>
            </div>
            <div class="left_links"> 
                <%= link_to "<button type='button' class='path_links'>night sky</button>".html_safe, sky_path %>
            </div>
            <div class="left_links"> 
                <%= link_to "<button type='button' class='path_links'>info</button>".html_safe, about_path %>
            </div>
        </div>

            <%= yield %>

        </div>

</body>
</html>
